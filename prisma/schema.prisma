generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Hoặc mysql/sqlite tùy bạn đang dùng
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String?
  category    String   @default("General") 
  stock       Int      @default(0)         
  createdAt   DateTime @default(now())
}